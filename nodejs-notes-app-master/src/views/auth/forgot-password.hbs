<div class="background"></div>
<div class="row">
  <div class="col-md-5 mx-auto">
    <div class="card mt-1 text-white rounded">
      <div class="card-header text-center pt-3">
        <h1 class="h4 text-white">
          OLVIDASTE TU CONTRASEÑA
        </h1>
        <hr class="my-2" />
        {{#if success_msg}}
        <p class="success">{{success_msg}}</p>
        {{/if}}
        {{#if error_msg}}
        <p class="error">{{error_msg}}</p>
        {{/if}}
        <form action="/auth/forgot-password" method="post">
          <div>
            <label class="mb-2 mt-1" for="email">REESTABLECER CONTRASEÑA</label>
            <input class="form-control text-center input-group-sm" type="email" name="email"
              placeholder="Ingrese su correo electrónico" required>
          </div>
          <button class="btn btn-success mt-2" type="submit">REESTABLECER</button>
        </form>
      </div>
    </div>