<div class="background"></div>
<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card mt-1 text-white rounded">
            <div class="card-header text-center pt-3">
                <h1 class="h4 text-white">
                    RESTABLECER CONTRASEÑA
                </h1>
                <hr class="my-2" />
                {{#if success_msg}}
                <p class="success">{{success_msg}}</p>
                {{/if}}
                {{#if error_msg}}
                <p class="error">{{error_msg}}</p>
                {{/if}}
                <form action="/auth/reset-password/{{token}}" method="post">
                    <div>
                        <label class="mb-2" for="password">Nueva contraseña:</label>
                        <input class="form-control input-group-sm text-center mb-2" type="password" name="password"
                            placeholder="Ingrese su nueva contraseña"
                            pattern="^(?=.*[A-Za-zñÑ])(?=.*\d)(?=.*[@$!%*?&])[A-Za-zñÑ\d@$!%*?&]{8,16}$"
                            title="La contraseña debe tener entre 8 y 16 caracteres, incluir al menos una letra, un número y un carácter especial."
                            required>
                    </div>
                    <div>
                        <label for="confirm_password">Confirmar contraseña:</label>
                        <input class="form-control input-group-sm text-center mt-2" type="password"
                            name="confirm_password" placeholder="Confirme su contraseña" required>
                    </div>
                    <button class="btn btn-success mt-2" type="submit">CONFIRMAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
