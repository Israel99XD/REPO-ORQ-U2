<div class="background"></div>
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card text-white">
      <div class="card-header text-center pt-4">
        <h1 class="h4 text-center text-white">INICIAR SESIÓN</h1>
      </div>
      <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logo.jpg" alt="Logo" />
      <div class="card-body">
        <form action="/auth/signin{{token}}" method="POST">
          <div class="mb-3">
            <label for="email">Correo electrónico:</label>
            <input type="email" class="form-control text-white bg-dark" name="email" placeholder="Ingrese su correo electrónico" autofocus required />
          </div>
          <div class="mb-3">
            <label for="password">Contraseña:</label>
            <input type="password" class="form-control text-white bg-dark" name="password" placeholder="Ingrese su contraseña" />
          </div>
          <button type="submit" class="btn btn-success btn-block w-100">Iniciar Sesión</button>
        </form>
        <div class="text-center mt-3">
          <a href="/auth/forgot-password" class="text-info">¿Olvidaste tu contraseña?</a>
          <p class="text-center mt-3">¿Aún no tienes cuenta? <a href="/auth/signup" class="text-info">Regístrate</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
